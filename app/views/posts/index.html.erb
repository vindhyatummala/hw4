<div class="row">
  <% for post in @posts %>
    <div class="col-md-6 col-lg-3">
      <h4>
        <% user = User.find_by({ "id" => post["user_id"] }) %>
        <% if user %>
          <%= user["username"] %>
        <% else %>
          anonymous
        <% end %>
      </h4>
      <img src="<%= post["image"] %>" class="img-fluid">
      <p><%= post["title"] %></p>
      <p><%= post["description"] %></p>
      <p><%= post["posted_on"] %></p>
    </div>
  <% end %>
</div>